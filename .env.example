# Claude Code Hooks Environment Variables
# Copy this file to .env and add your actual API keys

# ===== TTS PROVIDERS =====
# ElevenLabs (Premium TTS) - Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI (Alternative TTS + AI) - Get from: https://platform.openai.com/api-keys  
OPENAI_API_KEY=your_openai_api_key_here

# ===== AI COMPLETION PROVIDERS =====
# Anthropic (AI completion messages) - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== PERSONALIZATION =====
# Your name for personalized TTS messages (30% chance inclusion)
ENGINEER_NAME=YourName

# ===== OPTIONAL SETTINGS =====
# Default TTS voice for ElevenLabs (optional)
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Default TTS voice for OpenAI (optional: alloy, echo, fable, onyx, nova, shimmer)
OPENAI_TTS_VOICE=alloy

# Enable debug logging for hooks (optional: true/false)
HOOKS_DEBUG=false